[
  {
    "outputFileName": "wwwroot/css/bootstrap.blazor.bundle.min.css",
    "inputFiles": [
      "wwwroot/core/bootstrap/css/bootstrap.min.css",
      "wwwroot/lib/**/*.min.css",
      "Components/**/*.css",
      "wwwroot/src/bootstrap.blazor.css"
    ]
  },
  {
    "outputFileName": "wwwroot/css/motronic.min.css",
    "inputFiles": [ "wwwroot/src/motronic.css" ]
  },
  {
    "outputFileName": "wwwroot/bundle/bootstrap.blazor.min.js",
    "inputFiles": [
      "wwwroot/lib/extensions/*.js",
      "Components/**/!(*.esm).js"
    ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  },
  {
    "outputFileName": "wwwroot/js/bootstrap.blazor.bundle.min.js",
    "inputFiles": [
      "wwwroot/core/jquery/jquery-3.5.1.min.js",
