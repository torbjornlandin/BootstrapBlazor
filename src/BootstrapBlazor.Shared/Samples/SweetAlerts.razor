    <Button Icon="fa fa-fa" Text="弹窗" Color="Color.Success" OnClick="@ShowButtons" />
</DemoBlock>

<DemoBlock Title="显示自定义组件" Introduction="通过设置 <code>Component</code> 弹窗内容为自定义组件" Name="Component">
